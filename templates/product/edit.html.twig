<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <link rel="stylesheet" href="{{ asset('styles/product.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header>
        <h1>Edit Product</h1>
        <nav>
            <a href="{{ path('app_home') }}"><i class="fas fa-home"></i> Home</a>
            <a href="{{ path('app_product') }}"><i class="fas fa-box"></i> Products</a>
        </nav>
    </header>
    <main>
        <div class="form-container">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name, 'Product Name') }}
                    {{ form_widget(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.price, 'Price') }}
                    {{ form_widget(form.price) }}
                </div>
                <div class="form-actions">
                    <button type="submit" class="button save"><i class="fas fa-save"></i> Save</button>
                    <a href="{{ path('app_product') }}" class="button cancel"><i class="fas fa-arrow-left"></i> Back to Product List</a>
                </div>
            {{ form_end(form) }}
        </div>
    </main>
    <footer>
        <p>&copy; {{ "now"|date("Y") }} Your Company</p>
    </footer>
</body>
</html>
